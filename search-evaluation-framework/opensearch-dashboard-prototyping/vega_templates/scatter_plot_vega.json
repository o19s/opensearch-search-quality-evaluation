{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Metrics over time by name",
    "config": {
      "header": {
        "titleFontSize": 18,
        "titleFontWeight": "bold"
      }
    },
    
    "data": {"dummy": "empty"},
    "transform": [{"calculate": "random()", "as": "random"}],

    "facet": {
      "title": "Metric",
      "field": "metric",
      "type": "nominal",
      "header":{
        "labelColor":"steelblue",
        "labelFontSize":16
      }  
    },
    "columns": 4,
    "spec": {
      "mark": "circle",
      "width": 200,
      "height": 300,
      "encoding": {
        "x": {"field": "search_config", "type": "nominal"},
        "y": {"field": "value", "type": "quantitative"},
        "xOffset": {"field": "random", "type": "quantitative"},
        "tooltip": {"field": "query", "type": "nominal"},
        "opacity": {"value": 1.0}
      }
    }
  

}