{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Scatter plot with interpolated density-based jittering along the x-axis to simulate violin plot behavior.",

    "width": 600,
    "height": 600,
    "padding": 5,
  
    "data": [
    ],

    "scales": [
        {
          "name": "y",
          "type": "linear",
          "round": true,
          "nice": true,
          "zero": true,
          "domain": {"data": "metrics", "field": "value"},
          "range": "height"
        },
        {
          "name": "x",
          "type": "linear",
          "round": true,
          "nice": true,
          "zero": true,
          "domain": [-1.0, 1.0],
          "range": "width"
        }
      ],

      "axes": [
        {
          "scale": "y",
          "grid": true,
          "domain": false,
          "orient": "left",
          "titlePadding": 5,
          "title": "Metric Value"
        }
      ],    

      "marks": [
        {
          "name": "marks",
          "type": "symbol",
          "from": {"data": "metrics"},
          "encode": {
            "enter": {
              "x": {"scale": "x" , "field": "jitter_x"},
              "y": {"scale": "y", "field": "value"},
              "size": {"value": 100},
              "shape": {"value": "circle"},
              "opacity": {"value": 1},
              "stroke": {"value": "#4682b4"},
              "tooltip": {"signal": "{\"query\": datum.query}" },
              "fill": {"value": "#4682b4"}
            }
          }
        }
      ]
    
    
}